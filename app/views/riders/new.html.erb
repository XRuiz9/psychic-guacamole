<% if flash[:error] %>
  <% flash[:error].each do |error_msg| %>
    <li><%= error_msg %></li>
  <% end %>
<% end %>

<h1>Create a New Rider</h1>
<%= form_for (Rider.new) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.collection_check_boxes :rollercoaster_ids, Rollercoaster.all, :id, :name %><br>
<%= f.submit %>
<% end %>